    keywords = {atlantic meridional overturning circulation,climate change,heinrich stadial 1,last glacial maximum,vegetation dynamics},
    month = {jan},
    pages = {82--99},
    title = {{A 25,000 year record of climate and vegetation change from the southwestern Cape coast, South Africa}},
    volume = {105},
    year = {2022},
    html = {https://www.doi.org/10.1017/qua.2021.31}
