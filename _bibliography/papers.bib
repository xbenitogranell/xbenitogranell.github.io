    month = {nov},
    pages = {110609},
    publisher = {Elsevier B.V.},
    title = {{Miocene East Asia summer monsoon precipitation variability and its possible driving forces}},
    volume = {581},
    year = {2021},
    html = {https://www.doi.org/10.1016/j.palaeo.2021.110609}
