	urldate = {2022-03-10},
	journal = {Science of The Total Environment},
	author = {Benito, Xavier and Benito, Blas and Vélez, Maria I. and Salgado, Jorge and Schneider, Tobias and Giosan, Liviu and Nascimento, Majoi N.},
	month = jun,
	year = {2022},
	keywords = {Pollen, Diatoms, Agropastoralism, GAMs, lagged time series, Rate of change, Tropical paleolimnology},
	pages = {154115},
	file = {ScienceDirect Snapshot:/Users/xavier/Zotero/storage/EKKRXBDT/S0048969722012074.html:text/html},
