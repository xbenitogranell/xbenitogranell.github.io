	journal = {Limnology and Oceanography},
	author = {Benito, Xavier and Luethje, Melina and Schneider, Tobias and Fritz, Sherilyn C. and Baker, Paul A. and Pedersen, Eric J. and Gaüzère, Pierre and de Novaes Nascimento, Majoi and Bush, Mark and Ruhi, Albert},
