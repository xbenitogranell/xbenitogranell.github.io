    issn = {0906-7590},
    journal = {Ecography},
    keywords = {African Humid Period,climate-disturbance-ecosystem interactions,disturbance dynamics,land use and land cover change,paleoecological reconstruction,vegetation change},
    month = {aug},
    number = {8},
